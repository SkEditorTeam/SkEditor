<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="SkEditor.Controls.ColorPickerSettingsExpander">

    <ui:SettingsExpander Header="{Binding ExpanderHeader}" Name="SettingsExpanderObject"
                         IconSource="{StaticResource ColorIcon}">
        <ui:SettingsExpander.Footer>
            <ui:ColorPickerButton Name="ColorPicker" IsAlphaEnabled="{Binding IsAlphaEnabled}" />
        </ui:SettingsExpander.Footer>
    </ui:SettingsExpander>
</UserControl>